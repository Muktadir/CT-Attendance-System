<%= form_for(@absent) do |f| %>
    <% if @absent.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@absent.errors.count, "error") %> prohibited this attendance from being saved:</h2>

          <ul>
            <% @absent.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">

      <%= f.hidden_field :firstname, :value => current_employee.firstname %>
    </div>
    <div class="field">

      <%= f.hidden_field :lastname, :value => current_employee.lastname %>
    </div>
    <div class="field">

      <% date = Time.now.strftime("%Y %B %d").to_s %>
      <%= f.hidden_field :date, :value => date %>
    </div>
    <div class="field">

      <%= f.hidden_field :login_at %>
    </div>
    <div class="field">

      <%= f.hidden_field :logout_at %>
    </div>
    <div class="field">

      <%= f.hidden_field :present, :value => false %>
    </div>
    <div class="field">

      <%= f.hidden_field :leave, :value => true %>
    </div>
    <div class="field">

      <%= f.text_field :leave_cause %>
    </div>
    <div class="field">

      <%= f.hidden_field :working_hours %>
    </div>
    <div class="actions">
      <%= f.submit "Make Leave" %>
    </div>
<% end %>
