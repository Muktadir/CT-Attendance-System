<div>
  <div class="row-fluid">
    <div class="span3">
      <%= image_tag "ct_logo.png", :style => "margin:8% 0 0 5%" %>
      <b style="margin-left: 6%; font-size: 16px"><%= Time.now.strftime("%A, %d %B %Y") %></b>
    </div>
    <div class="span9"></div>
  </div>
  <hr>
  <div class="row-fluid">
    <div class="span5"></div>
    <div class="span2">
      <h2 style="text-align: center">Sign in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, :placeholder => "your@email.address" %>
          </div>
          <div class="field">
            <%= f.password_field :password, autocomplete: "off", :placeholder => "Password please :)" %>
          </div>
          <div class="actions">
            <%= f.submit "Sign in", :class => "btn btn-default", :style => "width:109%" %>
          </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
    <div class="span5"></div>
  </div>
</div>


